<Window x:Class="Cursov.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cursov"
        mc:Ignorable="d"
        Title="Window2" Height="300" Width="300">
    <Grid>
        
        <ScrollViewer Margin="0,0,0.2,-0.2">
            <StackPanel >
                <TextBox x:Name="search" HorizontalAlignment="Left" Height="20" Margin="50,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178"/>
                <Button x:Name="Search" Content="Пошук" HorizontalAlignment="Left" Height="20" Margin="120,0,0,0" VerticalAlignment="Top" Width="40" Click="Search_Click"/>
                <TextBlock x:Name="show" Text="" Margin="0,40,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
    
</Window>
